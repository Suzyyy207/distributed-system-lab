module api {
    typedef octet byteArray[4*1024];

    interface DataNode {
        byteArray read(in long block_id);
        long append(in long block_id, in byteArray bytes);
        long randomBlockId();
    };

    interface NameNode{
        string open(in string filepath, in long mode);
        void close(in string filepath);
        void modifyBlockID(in string filepath, in long new_block_id);
    };

};
